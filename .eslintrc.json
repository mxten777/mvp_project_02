{
  "extends": "next/core-web-vitals",
  "rules": {
    "no-unused-vars": "error",
    "@typescript-eslint/no-explicit-any": "error",
    "@typescript-eslint/ban-ts-comment": "error"
  },
  "overrides": [
    {
      "files": ["**/*.css"],
      "rules": {
        "at-rule-no-unknown": [
          true,
          {
            "ignoreAtRules": ["tailwind", "apply", "variants", "responsive", "screen"]
          }
        ]
      }
    }
  ]
}